# This .editorconfig file defines the coding style and formatting rules for the project.
# It ensures consistent code formatting across different editors and development environments.
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[{*.go,*.go2}]
indent_style = tab
tab_width = 4

[*.{yml,yaml,yml.gotmpl,yaml.gotmpl}]
indent_size = 2
